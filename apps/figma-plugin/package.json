{
  "name": "@design-sync/figma-plugin",
  "version": "0.0.5",
  "description": "Tokenize Figma Plugin",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "build-figma-plugin --watch",
    "build": "build-figma-plugin --minify",
    "lint": "eslint --cache --ext .ts,.tsx,.js,.jsx src && prettier -c src",
    "lint:fix": "eslint --cache --ext .ts,.tsx,.js,.jsx src --fix && prettier -c src -w",
    "test": "pnpm lint && pnpm test:types && vitest run --coverage --passWithNoTests",
    "test:types": "tsc --noEmit --skipLibCheck",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "@create-figma-plugin/ui": "^3.1.0",
    "@create-figma-plugin/utilities": "^3.1.0",
    "@design-sync/design-tokens": "workspace:*",
    "@design-sync/json-rpc-utils": "workspace:*",
    "@design-sync/storage": "workspace:*",
    "@design-sync/utils": "workspace:*",
    "@design-sync/w3c-dtfm": "workspace:*",
    "@dessert-box/react": "^0.7.5",
    "@modular-forms/preact": "^0.7.0",
    "@preact/signals": "^1.2.3",
    "@tanstack/react-query": "^5.28.8",
    "@vanilla-extract/css": "^1.14.1",
    "@vanilla-extract/recipes": "^0.5.2",
    "@vanilla-extract/sprinkles": "^1.6.1",
    "clsx": "^2.1.0",
    "preact": "^10.20.1",
    "valibot": "^0.30.0"
  },
  "devDependencies": {
    "@create-figma-plugin/build": "^3.1.0",
    "@create-figma-plugin/tsconfig": "^3.1.0",
    "@design-sync/eslint-config": "workspace:*",
    "@design-sync/tsconfig": "workspace:*",
    "@figma/plugin-typings": "^1.88.0",
    "@hyrious/esbuild-plugin-style": "^0.3.5",
    "@preact/preset-vite": "^2.8.2",
    "@vanilla-extract/esbuild-plugin": "^2.3.5",
    "@vanilla-extract/integration": "^7.1.1",
    "@vitest/coverage-v8": "^1.4.0",
    "esbuild": "^0.20.2",
    "eslint": "^8.57.0",
    "happy-dom": "^14.3.8",
    "lint-staged": "^15.2.2",
    "typescript": "^5.4.3",
    "vitest": "^1.4.0",
    "vitest-dom": "^0.1.1"
  },
  "figma-plugin": {
    "editorType": [
      "dev",
      "figma"
    ],
    "capabilities": [
      "inspect"
    ],
    "permissions": [
      "teamlibrary"
    ],
    "id": "tokenize-2",
    "name": "Tokenize 2",
    "main": "src/main.ts",
    "ui": "src/ui.tsx"
  }
}
