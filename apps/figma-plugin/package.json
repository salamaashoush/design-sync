{
  "name": "@design-sync/figma-plugin",
  "version": "0.1.0",
  "description": "DesignSync Figma Plugin",
  "private": true,
  "scripts": {
    "build:ui": "vite build",
    "build:main": "tsx esbuild.config.ts",
    "build": "bun run build:main && bun run build:ui",
    "dev:ui": "vite build --watch",
    "dev:main": "tsx esbuild.config.ts --watch",
    "dev": "concurrently \"bun run dev:main\" \"bun run dev:ui\"",
    "lint": "oxlint --import-plugin --deny-warnings && oxfmt --check src",
    "lint:fix": "oxlint --import-plugin --deny-warnings --fix && oxfmt src",
    "test:types": "tsc --noEmit --skipLibCheck"
  },
  "dependencies": {
    "@design-sync/design-tokens": "workspace:*",
    "@design-sync/rpc": "workspace:*",
    "@design-sync/storage": "workspace:*",
    "@design-sync/uikit": "workspace:*",
    "@design-sync/utils": "workspace:*",
    "@design-sync/w3c-dtfm": "workspace:*",
    "@vanilla-extract/css": "^1.18.0",
    "@vanilla-extract/recipes": "^0.5.7",
    "@vanilla-extract/sprinkles": "^1.6.5",
    "clsx": "^2.1.1",
    "solid-js": "^1.9.11",
    "valibot": "^1.2.0"
  },
  "devDependencies": {
    "@design-sync/tsconfig": "workspace:*",
    "@figma/plugin-typings": "^1.123.0",
    "@vanilla-extract/vite-plugin": "^5.1.4",
    "concurrently": "^9.2.1",
    "esbuild": "^0.27.3",
    "oxfmt": "^0.32.0",
    "oxlint": "^1.47.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-singlefile": "^2.3.0",
    "vite-plugin-solid": "^2.11.10"
  }
}
