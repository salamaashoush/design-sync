{
  "extends": "@design-sync/tsconfig/base.json",
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "paths": {
      "react": ["./node_modules/preact/compat/"],
      "react-dom": ["./node_modules/preact/compat/"]
    },
    "types": ["@figma/plugin-typings"]
  },
  "include": ["src/**/*"]
}
