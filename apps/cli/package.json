{
  "name": "@design-sync/cli",
  "description": "CLI for Design Sync",
  "version": "0.11.3",
  "repository": "salamaashoush/design-sync",
  "license": "MIT",
  "sideEffects": false,
  "private": false,
  "type": "module",
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "bin": {
    "design-sync": "./dist/cli.mjs"
  },
  "scripts": {
    "dev": "tsx src/cli.ts",
    "dev:watch": "tsx watch src/cli.ts",
    "build": "obuild",
    "lint": "oxlint --import-plugin --deny-warnings && oxfmt --check src",
    "lint:fix": "oxlint --import-plugin --deny-warnings --fix && oxfmt src",
    "prepack": "bun run build",
    "release": "bun test && bun publish",
    "test": "bun lint && bun test:types && bun test",
    "test:types": "tsc --noEmit --skipLibCheck"
  },
  "dependencies": {
    "@design-sync/manager": "workspace:*",
    "@design-sync/utils": "workspace:*",
    "@design-sync/w3c-dtfm": "workspace:*",
    "citty": "^0.2.1",
    "nypm": "^0.6.5"
  },
  "devDependencies": {
    "@design-sync/css-plugin": "workspace:*",
    "@design-sync/json-plugin": "workspace:*",
    "@design-sync/styled-components-plugin": "workspace:*",
    "@design-sync/tsconfig": "workspace:*",
    "@design-sync/vanilla-extract-plugin": "workspace:*",
    "@types/bun": "^1.3.9",
    "@types/node": "^25.2.3",
    "obuild": "^0.4.27",
    "oxfmt": "^0.32.0",
    "oxlint": "^1.47.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "publishConfig": {
    "bin": {
      "design-sync": "./dist/cli.mjs"
    },
    "access": "public",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.mjs"
      }
    },
    "main": "./dist/index.mjs",
    "types": "./dist/index.d.ts"
  }
}
