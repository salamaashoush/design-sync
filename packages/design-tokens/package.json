{
  "name": "@design-sync/design-tokens",
  "version": "0.0.1",
  "description": "Design tokens for Design Sync",
  "repository": "salamaashoush/design-sync",
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "private": true,
  "main": "src/index.ts",
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": {
          "types": "./dist/index.d.ts",
          "default": "./dist/index.js"
        },
        "require": {
          "types": "./dist/index.d.cts",
          "default": "./dist/index.cjs"
        }
      }
    },
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint ./src --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "pnpm run lint --fix",
    "test:types": "tsc --noEmit --skipLibCheck",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "@vanilla-extract/css": "^1.14.1",
    "@vanilla-extract/recipes": "^0.5.2",
    "@vanilla-extract/sprinkles": "^1.6.1"
  },
  "devDependencies": {
    "@design-sync/eslint-config": "workspace:*",
    "@design-sync/tsconfig": "workspace:*",
    "@vanilla-extract/esbuild-plugin": "^2.3.5",
    "eslint": "^8.57.0",
    "lint-staged": "^15.2.2",
    "tsup": "^8.0.2",
    "typescript": "^5.4.3"
  }
}
