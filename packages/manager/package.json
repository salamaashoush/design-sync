{
  "name": "@design-sync/manager",
  "version": "0.6.3",
  "description": "Plugable design tokens manager",
  "repository": "salamaashoush/design-sync",
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "private": false,
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "obuild",
    "dev": "npm run build -- --watch",
    "lint": "oxlint --import-plugin --deny-warnings && oxfmt --check src",
    "lint:fix": "oxlint --import-plugin --deny-warnings --fix && oxfmt src",
    "prepack": "bun run build",
    "release": "bun test && bun publish",
    "test": "bun lint && bun test:types && vitest run --coverage",
    "test:types": "tsc --noEmit --skipLibCheck"
  },
  "dependencies": {
    "@design-sync/utils": "workspace:*",
    "@design-sync/w3c-dtfm": "workspace:*",
    "c12": "^4.0.0-beta.2",
    "consola": "^3.4.2",
    "fast-glob": "^3.3.3",
    "giget": "^3.1.2"
  },
  "peerDependencies": {
    "oxfmt": "^0.24.0"
  },
  "devDependencies": {
    "@design-sync/tsconfig": "workspace:*",
    "@types/node": "^25.2.3",
    "@vitest/coverage-v8": "^4.0.18",
    "obuild": "^0.4.27",
    "oxfmt": "^0.32.0",
    "oxlint": "^1.47.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.mjs"
      }
    },
    "main": "./dist/index.mjs",
    "types": "./dist/index.d.ts"
  }
}
