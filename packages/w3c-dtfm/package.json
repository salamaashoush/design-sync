{
  "name": "@design-sync/w3c-dtfm",
  "version": "0.11.2",
  "description": "Design tokens module format (DTFM) utils and types",
  "repository": "salamaashoush/design-sync",
  "license": "MIT",
  "sideEffects": [
    "src/culori.ts"
  ],
  "type": "module",
  "private": false,
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "obuild",
    "dev": "npm run build -- --watch",
    "lint": "oxlint --import-plugin --deny-warnings && oxfmt --check src",
    "lint:fix": "oxlint --import-plugin --deny-warnings --fix && oxfmt src",
    "prepack": "bun run build",
    "release": "bun run test && bun publish",
    "test": "bun run lint && bun run test:types && bun test --coverage",
    "test:unit": "bun test",
    "test:types": "tsc --noEmit --skipLibCheck"
  },
  "dependencies": {
    "@design-sync/utils": "workspace:*",
    "culori": "^4.0.2"
  },
  "devDependencies": {
    "@design-sync/tsconfig": "workspace:*",
    "@types/bun": "latest",
    "@types/culori": "^4.0.1",
    "@types/node": "^25.2.3",
    "obuild": "^0.4.27",
    "oxfmt": "^0.32.0",
    "oxlint": "^1.47.0",
    "typescript": "^5.9.3"
  },
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.mjs"
      }
    },
    "main": "./dist/index.mjs",
    "types": "./dist/index.d.ts"
  }
}
