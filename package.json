{
  "name": "tokenize",
  "version": "0.0.0",
  "description": "",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build --scope=@tokenize/figma-plugin",
    "test": "turbo test",
    "lint": "turbo lint",
    "lint:fix": "turbo lint",
    "verify": "turbo verify",
    "precommit": "turbo precommit",
    "postinstall": "husky install",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\""
  },
  "license": "MIT",
  "dependencies": {
    "husky": "^8.0.3",
    "prettier": "^3.0.3",
    "turbo": "^1.10.14",
    "typescript": "^5.2.2"
  },
  "resolutions": {
    "esbuild": "^0.18.17"
  },
  "packageManager": "pnpm@8.6.0",
  "engines": {
    "node": ">=20.0.0"
  }
}
