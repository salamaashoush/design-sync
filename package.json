{
  "name": "design-sync",
  "version": "0.0.0",
  "description": "Set of tools to help you sync your design tokens across platforms",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*",
    "examples/*",
    "tooling/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "test": "turbo test",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "test:types": "turbo test:types",
    "prepare": "husky",
    "changeset": "changeset",
    "ci:version": "changeset version",
    "ci:publish": "changeset publish"
  },
  "license": "MIT",
  "dependencies": {
    "husky": "^9.0.11",
    "prettier": "^3.3.1",
    "turbo": "^2.0.1",
    "typescript": "^5.4.5"
  },
  "resolutions": {
    "esbuild": "^0.21.4"
  },
  "packageManager": "pnpm@9.2.0",
  "engines": {
    "node": ">=22.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.5",
    "@design-sync/cli": "workspace:*",
    "tsx": "^4.11.2"
  },
  "pnpm": {
    "overrides": {
      "@design-sync/cli": "workspace:*"
    }
  }
}
