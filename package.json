{
  "name": "design-sync",
  "version": "0.0.0",
  "description": "Set of tools to help you sync your design tokens across platforms",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*",
    "examples/*",
    "tooling/*"
  ],
  "scripts": {
    "build": "bun --filter '*' run build",
    "test": "bun --filter '*' run test",
    "lint": "bun --filter '*' run lint",
    "lint:fix": "bun --filter '*' run lint:fix",
    "test:types": "bun --filter '*' run test:types",
    "prepare": "husky",
    "changeset": "changeset",
    "ci:version": "changeset version",
    "ci:publish": "changeset publish",
    "lint:ws": "bunx sherif@latest",
    "postinstall": "bun lint:ws"
  },
  "license": "MIT",
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@design-sync/cli": "workspace:*",
    "husky": "^9.1.7",
    "oxfmt": "^0.32.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "resolutions": {
    "esbuild": "^0.27.3"
  },
  "packageManager": "bun@1.3.9",
  "engines": {
    "node": ">=22.0.0"
  },
  "overrides": {
    "@design-sync/cli": "workspace:*"
  }
}
