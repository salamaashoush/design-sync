{
  "name": "design-sync",
  "version": "0.0.0",
  "description": "Set of tools to help you sync your design tokens across platforms",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*",
    "examples/*"
  ],
  "scripts": {
    "dev:figma": "turbo run dev --filter @design-sync/figma-plugin",
    "dev:cli": "turbo run dev --filter @design-sync/cli",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo test",
    "lint": "turbo lint",
    "lint:fix": "turbo lint",
    "test:types": "turbo test:types",
    "precommit": "turbo precommit",
    "postinstall": "husky install",
    "changeset": "changeset",
    "ci:version": "changeset version",
    "ci:publish": "changeset publish"
  },
  "license": "MIT",
  "dependencies": {
    "husky": "^8.0.3",
    "prettier": "^3.1.1",
    "turbo": "^1.11.2",
    "typescript": "^5.3.3"
  },
  "resolutions": {
    "esbuild": "^0.19.10"
  },
  "packageManager": "pnpm@8.12.1",
  "engines": {
    "node": ">=21.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@design-sync/cli": "workspace:*",
    "tsx": "^4.6.2"
  },
  "pnpm": {
    "overrides": {
      "@design-sync/cli": "workspace:*"
    },
    "patchedDependencies": {
      "@create-figma-plugin/build@3.1.0": "patches/@create-figma-plugin__build@3.1.0.patch"
    }
  }
}
